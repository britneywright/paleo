<%= form_tag foods_path, :method => :get, :id => "foods_search" do %>
  <p>
    <%= text_field_tag :search %>
    <%= submit_tag "Search", :name => nil, class: "searchButton" %>
  </p>
<% end %>

<% if params[:search] %>
<%= render 'foods' %>
<% else %>
<div id="foods"><%= render 'foods' %></div>
<% end %>
